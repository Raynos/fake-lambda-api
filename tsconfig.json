{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "outDir": "node_modules/.__out",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": true,
    "incremental": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@pre-bundled/rimraf": ["./types/pre-bundled__rimraf"],
      "@pre-bundled/tape": ["./types/pre-bundled__tape"],
      "*" : ["./types/*"]
    }
  },
  "include": [
    "types/**/*.d.ts",
    "index.js",
    "scripts/*.js",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
